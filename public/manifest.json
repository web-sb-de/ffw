{
  "name": "{{ .Site.Title }}",
  "short_name": "{{ .Site.Title }}",
  "description": "{{ .Site.Params.description }}",
  "start_url": "/",
  "display": "standalone",
  "background_color": "{{ .Site.Params.colors.background }}",
  "theme_color": "{{ .Site.Params.colors.element_background }}",
  "icons": [
    {
      "src": "{{ if $icon }}{{ $icon }}{{ else }}/icon.png{{ end }}",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "{{ if $icon }}{{ $icon }}{{ else }}/icon.png{{ end }}",
      "sizes": "512x512",
      "type": "image/png"
    }
  ]
}
